@model TraversalCoreProject.CQRS.Commands.DestinationCommands.CreateDestinationCommand
@{
    ViewData["Title"] = "AddDestination";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yeni Tur Rotası Ekleme Sayfası</h2>
<form method="post">
    <div class="form-group">
        @Html.Label("Şehir Adı")
        <input type="text" asp-for="City" class="form-control" />
        <br />
    </div>
    <div class="form-group">
        @Html.Label("Gün-Gece Sayısı")
        <input type="text" asp-for="DayNight" class="form-control" />
        <br />
    </div>
    <div class="form-group">
        @Html.Label("Fiyat")
        <input type="text" asp-for="Price" class="form-control" />
        <br />
    </div>
    <div class="form-group">
        @Html.Label("Kapasite")
        <input type="text" asp-for="Capacity" class="form-control" />
        <br />
    </div>

    <button class="btn btn-outline-primary">Tur Rotasını Kaydet</button>

</form>
