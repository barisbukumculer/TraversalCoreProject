@model DtoLayer.DTOs.AnnouncementDTOs.AnnouncementAddDTO
@{
    ViewData["Title"] = "AddAnnouncement";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Duyuru Ekleme Ekranı</h1>

<form method="post">
    <div class="form-group">
        @Html.Label("Duyuru Başlığı")
        <input type="text" asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
        <br />
    </div>
    <div class="form-group">
        @Html.Label("Duyuru İçeriği")
        <input type="text" asp-for="Content" class="form-control" />
        <span asp-validation-for="Content" class="text-danger"></span>
        <br />
    </div>

    <button class="btn btn-outline-primary" >Duyuruyu Oluştur</button>
</form>

